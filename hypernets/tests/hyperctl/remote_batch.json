{
    "name": "remote-batch-example",
    "jobs": [
        {
            "name": "job1",
            "params": {
                "learning_rate": 0.1
            },
            "command": "sleep 3;echo \"finished\""
        },{
            "name": "job2",
            "params": {
                "learning_rate": 0.2
            },
            "command": "sleep 3;echo \"finished\""
        }
    ],
    "backend": {
        "type": "remote",
        "machines": [
            {
                "connection": {
                    "hostname": "host1",
                    "username": "hyperctl",
                    "password": "hyperctl"
                },
                "environments": {
                    "JAVA_HOME": "/usr/local/jdk"
                }
            },
            {
                 "connection":{
                    "hostname": "host2",
                    "username": "hyperctl",
                    "password": "hyperctl"
                }
            }
        ]
    },
    "scheduler": {
        "interval": 5000,
        "exit_on_finish": false
    },
    "server": {
        "host": "localhost",
        "port": 8061
    }
}